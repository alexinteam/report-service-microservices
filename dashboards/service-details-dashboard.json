{
  "dashboard": {
    "id": null,
    "title": "Service Details",
    "tags": ["services", "details"],
    "style": "dark",
    "timezone": "browser",
    "templating": {
      "list": [
        {
          "name": "service",
          "type": "query",
          "query": "label_values(http_requests_total, service)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*"
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "HTTP Requests Rate - $service",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{service=~\"$service\"}[5m])) by (service, status_code)",
            "legendFormat": "{{service}} - {{status_code}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Response Time - $service",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{service=~\"$service\"}[5m])) by (le, service))",
            "legendFormat": "{{service}} - 95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket{service=~\"$service\"}[5m])) by (le, service))",
            "legendFormat": "{{service}} - 50th percentile"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Business Operations - $service",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum(rate(business_operations_total{service=~\"$service\"}[5m])) by (service, operation)",
            "legendFormat": "{{service}} - {{operation}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Database Operations - $service",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum(rate(database_operations_total{service=~\"$service\"}[5m])) by (service, operation)",
            "legendFormat": "{{service}} - {{operation}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 5,
        "title": "Memory Usage - $service",
        "type": "timeseries",
        "targets": [
          {
            "expr": "go_memory_classes_heap_objects_bytes{service=~\"$service\"} / (1024*1024)",
            "legendFormat": "{{instance}} - Heap Objects (MB)"
          },
          {
            "expr": "go_memory_classes_heap_free_bytes{service=~\"$service\"} / (1024*1024)",
            "legendFormat": "{{instance}} - Heap Free (MB)"
          },
          {
            "expr": "go_memory_classes_heap_stacks_bytes{service=~\"$service\"} / (1024*1024)",
            "legendFormat": "{{instance}} - Stack (MB)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "MB",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s"
  }
}
