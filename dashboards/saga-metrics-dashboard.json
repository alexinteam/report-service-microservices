{
  "dashboard": {
    "id": null,
    "title": "Saga Metrics",
    "tags": ["saga", "transactions"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Saga Transactions Started",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(business_operations_total{operation=\"saga_started\"}[5m])) by (exported_service)",
            "legendFormat": "{{exported_service}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Saga Transactions Completed",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(business_operations_total{operation=\"saga_completed\"}[5m])) by (exported_service)",
            "legendFormat": "{{exported_service}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 8,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Saga Transactions Failed",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(business_operations_total{operation=\"saga_failed\"}[5m])) by (exported_service)",
            "legendFormat": "{{exported_service}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 16,
          "y": 0
        }
      },
      {
        "id": 4,
        "title": "Saga Step Executions",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum(rate(business_operations_total{operation=~\"saga_.*\"}[5m])) by (exported_service, operation)",
            "legendFormat": "{{exported_service}} - {{operation}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "Saga Compensation Rate",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum(rate(business_operations_total{operation=\"saga_compensated\"}[5m])) by (exported_service)",
            "legendFormat": "{{exported_service}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 6,
        "title": "Saga Operations Summary",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum(business_operations_total{operation=~\"saga_.*\"}) by (exported_service, operation)",
            "legendFormat": "{{exported_service}} - {{operation}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}