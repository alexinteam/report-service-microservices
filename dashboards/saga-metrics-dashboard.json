{
  "dashboard": {
    "id": null,
    "title": "Saga Metrics",
    "tags": ["saga", "transactions"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Saga Transactions Started",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(saga_transactions_started_total[5m])) by (saga_type)",
            "legendFormat": "{{saga_type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Saga Transactions Completed",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(saga_transactions_completed_total[5m])) by (saga_type)",
            "legendFormat": "{{saga_type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 8,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Saga Transactions Failed",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(saga_transactions_failed_total[5m])) by (saga_type)",
            "legendFormat": "{{saga_type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 16,
          "y": 0
        }
      },
      {
        "id": 4,
        "title": "Saga Step Executions",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum(rate(saga_step_executions_total[5m])) by (saga_type, step_name)",
            "legendFormat": "{{saga_type}} - {{step_name}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "Saga Compensation Rate",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum(rate(saga_compensations_total[5m])) by (saga_type)",
            "legendFormat": "{{saga_type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 6,
        "title": "Saga Duration",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(saga_duration_seconds_bucket[5m])) by (le, saga_type))",
            "legendFormat": "{{saga_type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s"
  }
}
